@model StudentLMS.Models.Entities.Student

<h1>Edit Student</h1>

<form asp-action="Edit" method="post">

    <div itemtype="3">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    

    <div itemtype="3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div itemtype="3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>

    <div itemtype="3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" />
    </div>

    <div itemtype="3">
        <input type="checkbox" class="form-check-input" id="subscribed" asp-for="Subscribed" />
        <label class="form-check-label" for="subscribed">Subscribed</label>

    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="submit" class="btn btn-danger ms-3" asp-controller="Students" asp-action="Delete">Delete</button>
    </div>

</form>